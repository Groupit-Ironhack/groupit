<div class="container top-container">
    <div class="row">
        <div class="col col-lg-8 push-lg-2">
            <h2>Create a plan!</h2>
               
           
            <form action="/plans/<%= concertId %>/new" method="POST" id="form-container">
            <table class="table">
            <tbody>
                <tr>
                    <td colspan="2">
                    Location:
                    <div id="map"></div>
                    <input id="pac-input" class="controls form-control" type="text" name="location" placeholder="Location">
                            <div id="type-selector" class="controls">
                                <input type="radio" name="type" id="changetype-establishment" checked="checked">
                                <label for="changetype-establishment">Establishments</label>
                                <input type="radio" name="type" id="changetype-address">
                                <label for="changetype-address">Addresses</label>
                            </div>
                    </td>
                </tr>
                <tr>
                    <td>Description: </td>
                    <td>
                        <textarea id="description" class="form-control" name="description" placeholder="Descripcion breve del plan."></textarea>
                    </td>
                </tr>
                <tr>
                    <td>Time: </td>
                    <td>
                        <input id="time" class="form-control" type="time" name="time" >
                    </td>
                </tr>
            </tbody>
            </table>               
                <% if (typeof message !== "undefined") { %>
                <div class="error-message">
                    <%= message %>
                </div>
                <% } %>
                <hr>
                <a href="/concerts/<%= concertId %>" class="btn btn-primary float-left">Back</a>
                <button class="btn btn-success float-right">Create Plan</button>
            </form>
        </div>
    </div>
    </div>
