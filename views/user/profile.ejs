<div class="container top-container">
  <div class="row">
    <div class="col col-sm-4 profile-img">
        <img src="../<%= user.imgUrl %>" alt="">
        <% if (user.id == loggedId){ %>
        <a class="btn btn-primary" href="/profile/edit"><i class="fa fa-pencil-alt"></i> Editar perfil</a>  
        <a class="btn btn-danger" href="/logout"><i class="fa fa-power-off"></i> Logout</a>
        <% } %>
    </div>
    <div class="col col-sm-8 profile-info">
        <h1><%= user.name%>'s profile</h1>
        <table class="table">
            <tbody>
                <tr>
                    <td>Username: </td>
                    <td><%= user.username%></td>
                </tr>
                <tr>
                    <td>Name: </td>
                    <td><%= user.name%></td>
                </tr>
                <tr>
                    <td>Age: </td>
                    <td><%= user.age%></td>
                </tr>
                <tr>
                    <td>Country: </td>
                    <td><%= user.address.country%></td>
                </tr>
                <tr>
                    <td>City: </td>
                    <td><%= user.address.city%></td>
                </tr>
            </tbody>
        </table>
    </div>
  </div>
</div>
