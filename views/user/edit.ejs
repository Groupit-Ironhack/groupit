<div class="container top-container">
    <form action="/profile/edit" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col col-sm-4 profile-img">
                <img src="../<%= user.imgUrl %>" alt="">
                <label for="usu-img">Profile picture:</label>
                <input class="form-control" id="usu-img" type="file" name="imgUrl">
            </div>
            <div class="col col-sm-8 profile-info">
                <h1><%= user.name%>'s profile</h1>
                <table class="table">
                    <tbody>
                        <tr>
                            <td>Username: </td>
                            <td>
                                <input class="form-control" type="text" name="username" value="<%= user.username%>">
                            </td>
                        </tr>
                        <tr>
                            <td>Change Password: </td>
                            <td>
                                <input class="form-control" type="password" name="password">   
                            </td>
                        </tr>
                        <tr>
                            <td>Name: </td>
                            <td>
                                <input class="form-control" type="text" name="name" value="<%=  user.name%>">
                            </td>
                        </tr>
                        <tr>
                            <td>Age: </td>
                            <td>
                                <input class="form-control" type="text" name="age" value="<%= user.age%>">
                            </td>
                        </tr>
                        <tr>
                            <td>Country: </td>
                            <td>
                                <input class="form-control" type="text" name="address1" value="<%= user.address.country%>">
                            </td>
                        </tr>
                        <tr>
                            <td>City: </td>
                            <td>
                                <input class="form-control" type="text" name="address2" value="<%= user.address.city%>">
                            </td>
                        </tr>
                    </tbody>
                </table>
            
                <hr>    
                <button type="button" class="btn btn-danger float-left">
                    <a href="/profile/delete/<%= user.id %>">Delete Account</a>
                </button>
                <input class="btn btn-success float-right" type="submit" value="Save Changes"> 
                <a class="btn btn-primary float-right margin-right-20" href="/profile"> Back</a>
            
            </div>
        </div>
    </form>    
</div>

