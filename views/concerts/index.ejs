<div class="container top-container">
  <div class="row">
    <div class="col">
      <h2>Search concerts</h2>
      <form class="form-inline">
        <input class="form-control mb-4 mr-sm-4 mb-sm-0" id="where" type="text" name="where" placeholder="where"/>
        <input class="form-control mb-4 mr-sm-4 mb-sm-0" id="performer" type="text" name="artist" placeholder="artist"/>
        <input type="button" class="btn btn-info" onclick="show_events()" value="Show Events" /> <br>
      </form>
    </div>
  </div>
  <div class="row">
    <div id="search-results" class="col">
    </div>
  
  </div>
  <div class="row">
    <div class="col">
      <hr>
      <h2>Suggested Concerts near you!</h2>
      <div id="suggested-concerts">
        <% events.forEach((event) => {%>
          <div class="concert-card">
            <h3 data-id="<%= event.id %>" class="concert">
              <a href="/concerts/<%= event.id %>"><%= event.title %></a>
            </h3>
            <p><%= event.venue_name %> - <%= event.city_name %></p>
            <p><%= event.start_time %></p>
          </div>
        <% }) %>
      </div>
    </div>
  </div> 
</div>
<script src="../libs/js/eventful-api.js"></script>
<script src="../libs/js/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="../js/events.js"></script>





