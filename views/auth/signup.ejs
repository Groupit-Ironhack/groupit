<!-- views/auth/signup.ejs -->
<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
    <label for="username">Username</label>
    <br>
    <input id="username" type="text" name="username" placeholder="Username">
    <br>
    <label for="password">Password</label>
    <br>
    <input id="password" type="password" name="password" placeholder="Your password">
    <br>
    <br>
    <label for="name">Name</label>
    <br>
    <input id="name" type="text" name="name" placeholder="Name">
    <br>
    <br>
    <label for="age">Age</label>
    <br>
    <input id="age" type="number" name="age" placeholder="Age">
    <br>
    <br>
    <label for="address">Address</label>
    <br>
    Country:<input id="address1" type="text" name="country" placeholder="Country">
    <br>
    City:<input id="address2" type="text" name="city" placeholder="City">
    <br>

    <% if (typeof message !== "undefined") { %>
        <div class="error-message">
            <%= message %>
        </div>
        <% } %>
            <br>
            <br>

            <button>Create account</button>

            <p class="account-message">
                Do you already have an account?
                <a href="/auth/login">Login</a>
            </p>
</form>

<a href="/">Go Home</a>